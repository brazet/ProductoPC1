@model producto.Models.Producto
@{
    ViewData["Title"] = "Producto";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Producto</h1>

    <form asp-controller="Producto" asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <label asp-for="nombre" class="form-label"></label>
        <input asp-for="nombre" class="form-control form-control-sm" type="text" placeholder="Escribe un nombre" aria-label=".form-control-sm" />

        <label asp-for="categoria" class="control-label"></label>
        <input asp-for="categoria" class="form-control" />

        <label asp-for="precio" class="control-label"></label>
        <input asp-for="precio" class="form-control" />

        <label asp-for="descuento" class="control-label"></label>
        <input asp-for="descuento" class="form-control" />


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Actualizar</button> 
        </div>              
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>